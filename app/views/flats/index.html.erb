<div class="container mt-3">
  <h1>All our Flats</h1>
  <p>All <%= @flats.size %> flats.</p>


  <div class="cards-grid">
    <% @flats.each do |flat| %>
      <div class="card">
        <h1><%= flat.name %></h1>
        <p><%= flat.address %></p>
        <div class="details">
          <i class="fas fa-users"></i>
          <p><%= flat.number_of_guests %></p>
          <i class="fas fa-dollar-sign"></i>
          <p><%= flat.price_per_night %></p>
        </div>
        <div class="more-info">
          <%= link_to 'More info', flat_path(flat) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
