<div class="container mt-3">
  <h1>Add a new Flat</h1>
  <div class="box-shadow col-lg-6 col-md-8 col-sm-12">
    <%= simple_form_for(@flat) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :number_of_guests %>
        <%= f.input :price_per_night %>
      </div>

      <div class="form-actions mt-3">
        <%= f.button :submit, class: 'btn btn-primary' %> <%= link_to 'Cancel', flats_path, class: 'btn btn-danger' %>
      </div>
    <% end %>
  </div>
</div>
